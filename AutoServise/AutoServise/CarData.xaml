<Page x:Class="AutoServise.CarData"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoServise"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CarData">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340*"></ColumnDefinition>

            <ColumnDefinition Width="60*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"></RowDefinition>
            <RowDefinition Height="350*"></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid x:Name="ClientFrame"></DataGrid>
        <Button Grid.Column="1" Content="Добавить" HorizontalAlignment="Center"  VerticalAlignment="Top" Click="Button_Click" />
        <Button Grid.Column="1" Content="Button" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
        <Button Grid.Column="1" Content="Button" HorizontalAlignment="Center"  VerticalAlignment="Bottom"/>
        <DataGrid x:Name="CarDataGrid"></DataGrid>
    </Grid>
</Page>
